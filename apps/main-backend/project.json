{
  "root": "apps/main-backend",
  "sourceRoot": "apps/main-backend/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "./tools/executors/prisma:serve",
      "options": {
        "cwd": "./apps/main-backend",
        "outDir": "./dist/apps",
        "entryPoint": "./main-backend/src/index.js"
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": "dependencies"
        }
      ]
    },
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "pnpm swc ./apps/main-backend/src -d ./dist/apps --config-file ./apps/main-backend/.swcrc --copy-files --delete-dir-on-start"
        ]
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": "dependencies"
        }
      ]
    },
    "migrate-prod": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "cwd": "apps/main-backend",
        "commands": [
          "pnpm prisma migrate deploy --schema=./apps/main-backend/prisma/schema.prisma",
          "pnpm prisma generate --schema=./apps/main-backend/prisma/schema.prisma"
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/main-backend/**/*.ts"]
      }
    },
    "test": {
      "executor": "./tools/executors/prisma:test",
      "options": {
        "cwd": "apps/main-backend"
      }
    }
  },
  "tags": []
}
