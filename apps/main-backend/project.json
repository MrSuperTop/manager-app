{
  "root": "apps/main-backend",
  "sourceRoot": "apps/main-backend/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "cwd": "apps/main-backend",
        "commands": [
          {
            "command": "docker-compose -f ./docker-compose.dev.yml up -d --remove-orphans"
          },
          {
            "command": "yarn prisma generate --watch & yarn swc ./src/* -d ../../dist/apps/main-backend/dist -w --config-file ./.swcrc --copy-files --delete-dir-on-start -s & yarn nodemon --watch ../../dist --ext js,yaml,json ../../dist/apps/main-backend/dist/index.js --delay 500ms"
          }
        ]
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": "dependencies"
        }
      ]
    },
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "cwd": "apps/main-backend",
        "commands": [
          {
            "command": "yarn swc ./src/* -d ../../dist/apps/main-backend/dist --config-file ./.swcrc --copy-files --delete-dir-on-start -s"
          }
        ]
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": "dependencies"
        }
      ]
    },
    "migrate": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "cwd": "apps/main-backend",
        "commands": [
          {
            "command": "yarn prisma migrate dev"
          }
        ]
      }
    },
    "migrate-force": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "cwd": "apps/main-backend",
        "commands": [
          {
            "command": "yarn prisma db push --force-reset"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/main-backend/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "cwd": "apps/main-backend",
        "commands": [
          {
            "command": "dotenv -e .env.test -- yarn prisma migrate reset --force",
            "forwardAllArgs": false
          },
          {
            "command": "dotenv -e .env.test -- yarn jest --verbose --forceExit",
            "forwardAllArgs": true
          }
        ]
      }
    }
  },
  "tags": []
}
